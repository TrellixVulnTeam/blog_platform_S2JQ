<% provide(:title, "記事詳細") %>
<div class="contents container">
  <%= render partial:'shared/flash' %>
<div class="row">
  <div class="blog-show col-lg-8">
    <div class="breadcrumb"></div>
    <div class="content">
      <article>
         <div class="thumbnail" style="background-image: url(<%= @blog.picture.url %>)"></div>
         <h1><%= @blog.title %></h1>
         <div><%= simple_format(h(@blog.content)) %></div>
      </article>
    </div>
    <div>
    <h4>コメント</h4>
    <div id="comments_area"><!-- #① -->
      <!-- 投稿されたコメント一覧をブログの詳細ページに表示するためのrender -->
      <%= render partial: 'comments/index', locals: { comments: @comments } %>
    </div>
    <% if logged_in? %>
      <!-- コメント入力欄をブログの詳細ページに表示するためのrender -->
      <%= render partial: 'comments/form', locals: { comment: @comment, blog: @blog } %>
    <% end %>
  </div>　
  </div>
  <div class="ssidebar col-lg-4">
  <%= render 'shared/right_menu' %> <!-- ライトメニューです -->
  </div>
</div>
</div>
