
    <div class="side koukoku1"></div>
    <div class="side search">
      <%= form_tag("/search",:method => 'get') do %>
    　<%= text_field_tag :search %>
      <%= submit_tag 'Search', :name => nil %>
      <% end %>
    </div>
    <div class="side categories">
      <h4>カテゴリー</h4>
      <ul>
        <% Blog.pluck("category").uniq.each do |category|%>
          <li>
            <p class="hidari">
              <%= category %>
            </p>
            <p class="fas fa-chevron-right"></p>
          </li>
          <% end %>
      </ul>
    </div>
    <div class="side ranking">
      <h4>人気記事</h4>
      <ul>
        <% @most_viewed[0..9].each do |blog|%>
          <li>
            <div class="hidari"><%= blog.title %></div> 
            <p class="fas fa-chevron-right"></p>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="side recent">最近の投稿</div>
    <div class="side otoiawase">お問い合わせ</div>
