<% provide(:title, @user.blogtitle) %>
<div class="bloghead">
  <h1><%= @user.blogtitle %></h1>
  <%= link_to("", "#{user_path(@user)}",class:"bloghead-link") %>
</div>

<div class="bloghead-menu nav">
  <ul>
    <li class="home"><a class="active" href="/users/<%= @user.id %>">Home</a></li>
    <li class="about"><a href="/users/<%= @user.id %>/about">About</a></li>
    <li class="profile"><a href="/users/<%= @user.id %>/profile">Profile</a></li>
    <li class="contact"><a href="/users/<%= @user.id %>/contact">Contact</a></li>
  </ul>
</div>
<div class="usershow-background">
<div class="usershow  contents container">
<div class="row">
  <div class="main col-lg-8">
    <div class="articles row">

      <% @blogs.each do |blog|%>
      <div class="usershow-kiji col-xs-12 col-lg-6">

          <div class="usershow-kiji-photo" style="background-image: url(<%= blog.picture.url %>); background-size: cover;"></div>


          <p class="usershow-kiji-title">
            <%= blog.title %>
          </p>
          <p class="usershow-kiji-category">
            <%= blog.category %>
          </p>

          <p class="usershow-kiji-time">
            <%= "#{ (blog.created_at.strftime("%Y/%m/%d(#{%w(日 月 火 水 木 金 土)[blog.created_at.wday]})")) }"%>
          </p>



      </div>
      <% end %>

      <div class="pagenate col-xs-12">
        <%= will_paginate @blogs, :previous_label => ' &lt 前へ', :next_label => '次へ &gt' %>
      </div>
    </div>
  </div>
  <div class="sidebar col-lg-4">
  <%= render 'shared/right_menu' %> <!-- ライトメニューです -->
  </div>
</div>
</div>
</div>
