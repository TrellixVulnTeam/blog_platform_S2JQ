<% provide(:title, "ログイン") %>
<div class="login-page">
<div class="login-form">
  <h4>パスワードの再設定</h4>
  <%= form_for(:password_reset, url: password_resets_path) do |f| %>
    <p><%= f.email_field :email, class: 'form-control',placeholder:"メールアドレス" %></p>

    <p><%= f.submit "送信", class:  "btn-flat-border" %></p>
  <% end %>
</div>
</div>
